# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=waste_management_user
DB_PASSWORD=your_secure_database_password
DB_DATABASE=waste_management_prod

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=waste-management-photos-prod

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-domain.com

# Domain Configuration
DOMAIN_NAME=your-domain.com

# JWNET Configuration
JWNET_API_URL=https://api.jwnet.go.jp
JWNET_API_KEY=your_jwnet_api_key
JWNET_CERT_PATH=/app/certs/jwnet-cert.pem
JWNET_KEY_PATH=/app/certs/jwnet-key.pem

# Elasticsearch Configuration (for logging)
ELASTICSEARCH_HOSTS=https://your-elasticsearch-cluster.com:9200
ELASTICSEARCH_USERNAME=your_elasticsearch_username
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Waste Management System <noreply@your-domain.com>

# SMS Configuration (for notifications)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890
